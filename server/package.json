{
  "name": "vitatrack",
  "version": "1.0.0",
  "description": "Vita track delivers real-time vital signs for pregnant patients securely to you.                             Track their health, stay informed and act fast",
  "main": "/src/index.js",
  "type": "module",
  "scripts": {
    "install-server": "npm install",
    "build": "rimraf ./dist && npx tsc",
    "prestart": "npm run build",
    "start": "node dist/app.js",
    "predev": "npm run build",
    "dev": "concurrently \"npx tsc --watch\" \"nodemon dist/app.js\""
  },
  "keywords": [
    "vitals"
  ],
  "author": "Tomiloba",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.14.0",
    "concurrently": "^9.2.0",
    "express": "^5.1.0",
    "nodemon": "^3.1.10",
    "rimraf": "^6.0.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.0",
    "prisma": "^6.14.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
