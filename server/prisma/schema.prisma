generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String        @id @default(cuid())
  name        String
  email       String        @unique
  password    String
  imgUrl      String?
  contactInfo String?
  role        role
  gender      gender?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  resetToken  String?       @unique
  expiresIn   DateTime?
  Appointment Appointment[]
}

enum role {
  admin
  doctor
  nurse
}

enum gender {
  male
  female
}

model Appointment {
  id         String   @id @default(cuid())
  isComplete Boolean  @default(false)
  dateTime   DateTime
  patientID  String
  patient    Patient  @relation(references: [id], fields: [patientID])
  userId     String
  user       User     @relation(references: [id], fields: [userId])
  reason     String
}

model Patient {
  id            String        @id @default(cuid())
  name          String
  Dob           DateTime
  imgUrl        String?
  status        Status
  age           Int
  contact       String
  lastMonitored DateTime
  bloodGroup    String
  GestationAge  String
  pregnancyType String
  EDD           DateTime
  LMP           DateTime
  GPAL          String
  HighRisk      String
  Vitals        Vitals[]
  Appointment   Appointment[]
}

enum Status {
  stable
  critical
}

model Vitals {
  id               String   @id @default(cuid())
  patient          Patient  @relation(fields: [patient_id], references: [id])
  patient_id       String
  heart_rate       String
  temperature      String
  blood_oxygen     String
  respiration_rate String
  time_monitored   DateTime
}

