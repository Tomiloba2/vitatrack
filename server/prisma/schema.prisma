generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model appointment {
  id         String   @id @default(cuid())
  isComplete Boolean  @default(false)
  dateTime   DateTime
  patientID  String
  userId     String
  reason     String
  patient    patient  @relation(fields: [patientID], references: [id])
  user       user     @relation(fields: [userId], references: [id])

  @@index([patientID], map: "Appointment_patientID_fkey")
  @@index([userId], map: "Appointment_userId_fkey")
}

model patient {
  id            String         @id @default(cuid())
  name          String
  Dob           DateTime
  imgUrl        String?
  status        patient_status
  age           Int
  contact       String
  lastMonitored DateTime
  bloodGroup    String
  GestationAge  String
  pregnancyType String
  EDD           DateTime
  LMP           DateTime
  GPAL          String
  HighRisk      String
  appointment   appointment[]
  vitals        vitals[]
}

model user {
  id          String        @id @default(cuid())
  name        String
  email       String        @unique(map: "User_email_key")
  password    String
  imgUrl      String?
  contactInfo String?
  role        user_role
  gender      user_gender?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  resetToken  String?       @unique(map: "User_resetToken_key")
  expiresIn   DateTime?
  appointment appointment[]
}

model vitals {
  id               String   @id @default(cuid())
  patient_id       String
  heart_rate       String
  temperature      String
  blood_oxygen     String
  respiration_rate String
  time_monitored   DateTime
  patient          patient  @relation(fields: [patient_id], references: [id])

  @@index([patient_id], map: "Vitals_patient_id_fkey")
}

enum patient_status {
  stable
  critical
}

enum user_role {
  admin
  doctor
  nurse
}

enum user_gender {
  male
  female
}
